@model List<CategorySummaryDto>
@{
    ViewData["Title"] = "Category Report";
    var totalAmount = Model.Sum(c => c.TotalAmount);
    var totalCount = Model.Sum(c => c.Count);
}

<div class="fade-in">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="mb-2" style="color: var(--dark-color); font-weight: 700;">
                <span>üìà</span> Category-wise Expense Report
            </h1>
            <p class="text-muted">@ViewBag.MonthName</p>
        </div>
        <div class="col-md-4">
            <form method="get" asp-action="Category" class="row g-2">
                <div class="col-5">
                    <select name="year" class="form-select form-select-lg">
                        <option value="">All Years</option>
                        @foreach (var year in (List<int>)ViewBag.AvailableYears)
                        {
                            <option value="@year" selected="@(ViewBag.Year != null && (int)ViewBag.Year == year)">@year</option>
                        }
                    </select>
                </div>
                <div class="col-4">
                    <select name="month" class="form-select form-select-lg">
                        <option value="">All Months</option>
                        @for (int i = 1; i <= 12; i++)
                        {
                            var monthName = new DateTime(2000, i, 1).ToString("MMMM");
                            <option value="@i" selected="@(ViewBag.Month != null && (int)ViewBag.Month == i)">@monthName</option>
                        }
                    </select>
                </div>
                <div class="col-3">
                    <button type="submit" class="btn btn-primary btn-lg w-100">
                        <span>üîé</span> Apply
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <div class="card bg-success text-white dashboard-stat-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title mb-3">üí∞ Total Amount</h5>
                            <h2 class="mb-0">$@totalAmount.ToString("N2")</h2>
                        </div>
                        <div style="font-size: 3rem; opacity: 0.3;">üíµ</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card bg-primary text-white dashboard-stat-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title mb-3">üìä Total Expenses</h5>
                            <h2 class="mb-0">@totalCount</h2>
                        </div>
                        <div style="font-size: 3rem; opacity: 0.3;">üìù</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="card">
            <div class="card-header bg-info text-white d-flex align-items-center">
                <span style="font-size: 1.5rem; margin-right: 0.5rem;">üìä</span>
                <h5 class="mb-0">Category Summary</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Category</th>
                                <th>Count</th>
                                <th>Total Amount</th>
                                <th>Percentage</th>
                                <th>Visual</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model)
                            {
                                <tr>
                                    <td><strong>@category.Category</strong></td>
                                    <td>@category.Count</td>
                                    <td class="text-success"><strong>$@category.TotalAmount.ToString("N2")</strong></td>
                                    <td><span class="badge bg-info">@category.Percentage.ToString("F1")%</span></td>
                                    <td>
                                        <div class="progress">
                                            <div class="progress-bar bg-info" role="progressbar" 
                                                 style="width: @category.Percentage%" 
                                                 aria-valuenow="@category.Percentage" 
                                                 aria-valuemin="0" 
                                                 aria-valuemax="100">
                                                @category.Percentage.ToString("F1")%
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-primary">
                                <td><strong>Total</strong></td>
                                <td><strong>@totalCount</strong></td>
                                <td class="text-success"><strong>$@totalAmount.ToString("N2")</strong></td>
                                <td><strong>100%</strong></td>
                                <td></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="empty-state">
                    <div style="font-size: 5rem; margin-bottom: 1rem;">üì≠</div>
                    <h5>No expenses found</h5>
                    <p class="text-muted">Try selecting a different period or <a asp-controller="Expenses" asp-action="Create">add some expenses</a>.</p>
                </div>
            </div>
        </div>
    }
</div>
