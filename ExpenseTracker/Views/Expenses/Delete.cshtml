@model ExpenseTracker.DTOs.Expense.ExpenseResponseDto
@{
    ViewData["Title"] = "Delete Expense";
}

<div class="row justify-content-center fade-in">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg border-danger">
            <div class="card-header text-white text-center" style="background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%); padding: 1.5rem;">
                <div style="font-size: 3rem; margin-bottom: 0.5rem;">‚ö†Ô∏è</div>
                <h4 class="mb-0">Delete Expense</h4>
            </div>
            <div class="card-body p-4">
                <div class="alert alert-warning mb-4">
                    <strong>‚ö†Ô∏è Warning!</strong> Are you sure you want to delete this expense? This action cannot be undone.
                </div>

                <div class="mb-4">
                    <h5 class="mb-3">Expense Details:</h5>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tr>
                                <th class="bg-light">Title:</th>
                                <td><strong>@Model.Title</strong></td>
                            </tr>
                            <tr>
                                <th class="bg-light">Category:</th>
                                <td><span class="badge bg-info">@Model.Category</span></td>
                            </tr>
                            <tr>
                                <th class="bg-light">Amount:</th>
                                <td class="text-success"><strong>$@Model.Amount.ToString("N2")</strong></td>
                            </tr>
                            <tr>
                                <th class="bg-light">Date:</th>
                                <td>@Model.Date.ToString("MMMM dd, yyyy")</td>
                            </tr>
                            @if (!string.IsNullOrEmpty(Model.Notes))
                            {
                                <tr>
                                    <th class="bg-light">Notes:</th>
                                    <td>@Model.Notes</td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>

                <form asp-action="Delete" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <span>‚Ü©Ô∏è</span> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger btn-lg">
                            <span>üóëÔ∏è</span> Delete Expense
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
