<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Expense Tracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Auth" && 
         (ViewContext.RouteData.Values["action"]?.ToString() == "Index" || 
          ViewContext.RouteData.Values["action"]?.ToString() == "Login" || 
          ViewContext.RouteData.Values["action"]?.ToString() == "Register"))
    {
        <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
    }
</head>
<body>
    <header @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Auth" && 
                  (ViewContext.RouteData.Values["action"]?.ToString() == "Index" || 
                   ViewContext.RouteData.Values["action"]?.ToString() == "Login" || 
                   ViewContext.RouteData.Values["action"]?.ToString() == "Register"))
             { <text>style="display: none;"</text> }>
        <nav class="navbar navbar-expand-sm navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    💰 <strong>Expense Tracker</strong>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Home" asp-action="Index">
                                    <span>🏠</span> Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Expenses" asp-action="Index">
                                    <span>📝</span> Expenses
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Reports" asp-action="Monthly">
                                    <span>📊</span> Monthly Report
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Reports" asp-action="Category">
                                    <span>📈</span> Category Report
                                </a>
                            </li>
                        </ul>
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <span>👤</span> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item">
                                                <span>🚪</span> Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Auth" asp-action="Login">
                                    <span>🔐</span> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Auth" asp-action="Register">
                                    <span>✨</span> Register
                                </a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid px-4" @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Auth" && 
                                             (ViewContext.RouteData.Values["action"]?.ToString() == "Index" || 
                                              ViewContext.RouteData.Values["action"]?.ToString() == "Login" || 
                                              ViewContext.RouteData.Values["action"]?.ToString() == "Register"))
                                         { <text>style="padding: 0;"</text> }>
        <main role="main" class="pb-3 pt-4" @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Auth" && 
                                                     (ViewContext.RouteData.Values["action"]?.ToString() == "Index" || 
                                                      ViewContext.RouteData.Values["action"]?.ToString() == "Login" || 
                                                      ViewContext.RouteData.Values["action"]?.ToString() == "Register"))
                                                 { <text>style="padding: 0; min-height: 100vh;"</text> }>
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show fade-in" role="alert">
                    <strong>✅ Success!</strong> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show fade-in" role="alert">
                    <strong>❌ Error!</strong> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger alert-dismissible fade show fade-in" role="alert">
                    <strong>❌ Error!</strong> @ViewBag.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-5" @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Auth" && 
                                         (ViewContext.RouteData.Values["action"]?.ToString() == "Index" || 
                                          ViewContext.RouteData.Values["action"]?.ToString() == "Login" || 
                                          ViewContext.RouteData.Values["action"]?.ToString() == "Register"))
                                     { <text>style="display: none;"</text> }>
        <div class="container-fluid text-center py-4">
            <p class="mb-0 text-muted">
                &copy; @DateTime.Now.Year - <strong>Expense Tracker</strong> - Built with ❤️ using ASP.NET Core MVC & MongoDB
            </p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
