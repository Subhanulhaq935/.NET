@model List<Availability>
@{
    ViewData["Title"] = "Manage Availability";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Manage Availability</h1>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header">
                    <h5>Add Availability</h5>
                </div>
                <div class="card-body">
                    <form asp-action="AddAvailability" method="post">
                        <div class="mb-3">
                            <label class="form-label">Date</label>
                            <input type="date" name="date" class="form-control" required min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Start Time</label>
                            <input type="time" name="startTime" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">End Time</label>
                            <input type="time" name="endTime" class="form-control" required />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Add Availability</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header">
                    <h5>Your Availability</h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Start Time</th>
                                        <th>End Time</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var avail in Model)
                                    {
                                        <tr>
                                            <td>@avail.Date.ToString("MMM dd, yyyy")</td>
                                            <td>@avail.StartTime.ToString(@"hh\:mm")</td>
                                            <td>@avail.EndTime.ToString(@"hh\:mm")</td>
                                            <td>
                                                <form asp-action="DeleteAvailability" asp-route-id="@avail.AvailabilityId" method="post" class="d-inline" onsubmit="return confirm('Are you sure?');">
                                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No availability slots added yet.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>





