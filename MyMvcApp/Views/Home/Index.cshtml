@model List<Service>
@{
    ViewData["Title"] = "Home";
    var categories = ViewBag.Categories as List<Category> ?? new List<Category>();
    var selectedCategory = ViewBag.SelectedCategory as string;
    var search = ViewBag.Search as string;
}

<div class="jumbotron bg-primary text-white p-5 mb-4 rounded fade-in">
    <div class="container">
        <h1 class="display-4">🔧 Welcome to SkillHub</h1>
        <p class="lead">Connect with trusted local service providers and get things done efficiently!</p>
        <div class="mt-4">
            <span class="badge bg-light text-dark me-2">✨ Trusted Providers</span>
            <span class="badge bg-light text-dark me-2">⚡ Quick Booking</span>
            <span class="badge bg-light text-dark">⭐ Quality Services</span>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Filter Services</h5>
                </div>
                <div class="card-body">
                    <form method="get" asp-action="Index">
                        <div class="mb-3">
                            <label class="form-label">Search</label>
                            <input type="text" name="search" class="form-control" value="@search" placeholder="Search services...">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Category</label>
                            <select name="category" class="form-select">
                                <option value="">All Categories</option>
                                @foreach (var cat in categories)
                                {
                                    <option value="@cat.CategoryId" selected="@(selectedCategory == cat.CategoryId.ToString())">@cat.Name</option>
                                }
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Filter</button>
                        <a asp-action="Index" class="btn btn-secondary w-100 mt-2">Clear</a>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <h2 class="mb-4">Available Services</h2>
            @if (Model.Any())
            {
                <div class="row">
                    @foreach (var service in Model)
                    {
                        <div class="col-md-6 mb-4 fade-in">
                            <div class="card h-100 service-card">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <h5 class="card-title mb-0">@service.Title</h5>
                                        <span class="badge bg-info">@service.Category.Name</span>
                                    </div>
                                    @if (!string.IsNullOrEmpty(service.Location))
                                    {
                                        <p class="mb-2">
                                            <i class="bi bi-geo-alt-fill text-secondary"></i>
                                            <span class="badge bg-secondary">@service.Location</span>
                                        </p>
                                    }
                                    <p class="card-text text-muted">@(service.Description.Length > 100 ? service.Description.Substring(0, 100) + "..." : service.Description)</p>
                                    <div class="d-flex justify-content-between align-items-center mt-3">
                                        <h4 class="text-primary mb-0">$@service.Price.ToString("F2")</h4>
                                        @if (service.Provider != null)
                                        {
                                            <div class="text-end">
                                                <p class="text-muted small mb-0">
                                                    <i class="bi bi-person-fill"></i> @service.Provider.Name
                                                </p>
                                            </div>
                                        }
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent border-top-0 pt-0">
                                    <a asp-action="ServiceDetails" asp-route-id="@service.ServiceId" class="btn btn-primary w-100">
                                        <i class="bi bi-eye-fill me-2"></i>View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <p>No services found. Try adjusting your filters.</p>
                </div>
            }
        </div>
    </div>
</div>
