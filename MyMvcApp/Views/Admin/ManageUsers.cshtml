@model List<ApplicationUser>
@{
    ViewData["Title"] = "Manage Users";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>All Registered Users</h1>
        <div>
            <span class="badge bg-primary">Total: @Model.Count</span>
            <span class="badge bg-success">Providers: @Model.Count(u => u.Role == "Provider")</span>
            <span class="badge bg-info">Customers: @Model.Count(u => u.Role == "Customer")</span>
            <span class="badge bg-warning">Admins: @Model.Count(u => u.Role == "Admin")</span>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Approved</th>
                            <th>Email Confirmed</th>
                            <th>Created At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Id.Substring(0, 8)...</td>
                                <td>@user.Name</td>
                                <td>@user.Email</td>
                                <td>
                                    <span class="badge bg-@(user.Role == "Admin" ? "danger" : user.Role == "Provider" ? "success" : "info")">
                                        @user.Role
                                    </span>
                                </td>
                                <td>
                                    @if (user.Role == "Provider")
                                    {
                                        <span class="badge bg-@(user.IsApproved ? "success" : "warning")">
                                            @(user.IsApproved ? "Yes" : "Pending")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-@(user.EmailConfirmed ? "success" : "secondary")">
                                        @(user.EmailConfirmed ? "Yes" : "No")
                                    </span>
                                </td>
                                <td>@user.CreatedAt.ToString("MMM dd, yyyy HH:mm")</td>
                                <td>
                                    @if (user.Role == "Provider")
                                    {
                                        @if (!user.IsApproved)
                                        {
                                            <form asp-action="ApproveProvider" method="post" class="d-inline">
                                                <input type="hidden" name="userId" value="@user.Id" />
                                                <button type="submit" class="btn btn-sm btn-success">Approve</button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form asp-action="DisableProvider" method="post" class="d-inline">
                                                <input type="hidden" name="userId" value="@user.Id" />
                                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Disable this provider?');">Disable</button>
                                            </form>
                                        }
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>





