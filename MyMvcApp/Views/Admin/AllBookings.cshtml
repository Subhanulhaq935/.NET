@model List<Booking>
@{
    ViewData["Title"] = "All Bookings";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>All Bookings</h1>
        <div>
            <a asp-action="ExportExcel" class="btn btn-success">Export Excel</a>
            <a asp-action="ExportPDF" class="btn btn-danger">Export PDF</a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Service</th>
                            <th>Customer</th>
                            <th>Provider</th>
                            <th>Date/Time</th>
                            <th>Status</th>
                            <th>Created</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in Model)
                        {
                            <tr>
                                <td>@booking.BookingId</td>
                                <td>@booking.Service.Title</td>
                                <td>@booking.Customer.Name</td>
                                <td>@booking.Provider.Name</td>
                                <td>@booking.BookingDateTime.ToString("MMM dd, yyyy HH:mm")</td>
                                <td>
                                    <span class="badge bg-@(booking.Status == "Accepted" ? "success" : booking.Status == "Pending" ? "warning" : "secondary")">
                                        @booking.Status
                                    </span>
                                </td>
                                <td>@booking.CreatedAt.ToString("MMM dd, yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>





